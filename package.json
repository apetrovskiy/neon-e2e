{
  "name": "neon-e2e",
  "version": "1.0.0",
  "description": "End-to-end API and Web tests of EVM",
  "author": "Alexander Petrovskiy <apetrovskiy@hotmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neonlabsorg/neon-e2e.git"
  },
  "bugs": {
    "url": "https://github.com/neonlabsorg/neon-e2e/issues"
  },
  "homepage": "https://github.com/neonlabsorg/neon-e2e#readme",
  "license": "ISC",
  "config": {
    "cucumber": "--require-module=ts-node/register --require-module=tsconfig-paths/register --require=tests/**/*.ts --format=tests/support/allure-reporter.ts:report/dummy.txt"
  },
  "scripts": {
    "pretest": "rimraf report && mkdir report",
    "dictionary": "rimraf dictionary && bdd-dictionary-generator -p ./tests/step-definitions -f markdown",
    "lint": "eslint '**/*.{ts,js}' --fix --max-warnings 0",
    "test:cucumber": "cucumber-js features/**/*.feature $npm_package_config_cucumber",
    "steps-usage": "yarn dry-run --format usage:report/usage.txt --format usage | grep 'UNUSED' || echo 'Good!'",
    "dry-run": "cucumber-js features/**/*.feature $npm_package_config_cucumber --dry-run",
    "report": "allure generate report/allure-results -o report/allure-report && allure open report/allure-report",
    "test:mocha": "rimraf ./build && tsc && sleep 1 && mocha --config .mocharc.json",
    "nw:clean": "rm -rf build",
    "nw:local": "npm run nw:clean && rm -rf node_modules/nightwatch-allure/node_modules/@types/node && tsc && nightwatch --config ./nightwatch.local.conf.js",
    "nw:ci": "npm run nw:clean && rm -rf node_modules/nightwatch-allure/node_modules/@types/node && tsc && nightwatch --config ./nightwatch.ci.conf.js"
  },
  "dependencies": {
    "@hqoss/guards": "^0.0.3",
    "@parity/api": "^5.1.19",
    "@parity/light.js": "^5.1.19",
    "@types/config": "^0.0.38",
    "@types/cucumber": "^6.0.0",
    "@types/faker": "^5.5.9",
    "allure-commandline": "^2.13.8",
    "allure-cucumberjs": "^2.0.0-beta.14",
    "axios": "^0.23.0",
    "config": "^3.3.6",
    "cucumber": "^6.0.5",
    "dotenv": "^10.0.0",
    "failsafe": "^1.0.0",
    "faker": "^5.5.3",
    "http-status-codes": "^2.1.4",
    "mocha-allure-reporter": "^1.4.0",
    "moment": "^2.29.1",
    "rimraf": "^3.0.0",
    "rxjs": "^7.4.0",
    "solc": "^0.8.9",
    "solc-typed-ast": "^7.0.1",
    "tsconfig-paths": "^3.9.0",
    "wait-for-expect": "^3.0.2",
    "web3": "^1.6.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@e2y/bdd-dictionary-generator": "^1.0.3",
    "@testdeck/mocha": "^0.2.0",
    "@types/chai": "^4.2.22",
    "@types/chromedriver": "^81.0.0",
    "@types/mocha": "^9.0.0",
    "@types/nightwatch": "^1.3.4",
    "@types/rimraf": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "allure-decorators": "^2.0.0-beta.14",
    "allure-js-commons": "^2.0.0-beta.14",
    "allure-mocha": "^2.0.0-beta.14",
    "chai": "^4.3.4",
    "chromedriver": "^94.0.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-chai-expect": "^2.1.0",
    "eslint-plugin-cucumber": "^1.4.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unicorn": "^29.0.0",
    "geckodriver": "^2.0.4",
    "gherkin-lint": "^4.2.1",
    "husky": "^4.0.0",
    "lint-staged": "^10.5.4",
    "mocha": "^9.1.3",
    "mocha-multi-reporters": "^1.5.1",
    "nightwatch": "^1.7.11",
    "nightwatch-allure": "^1.2.0",
    "prettier": "^2.4.1",
    "selenium-server": "^3.141.59",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "peerDependencies": {
    "@types/node": "^14.14.35"
  }
}
