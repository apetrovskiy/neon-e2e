{
  "compilerOptions": {
    "lib": ["es2019", "dom"],
    "target": "es6",
    "module": "CommonJS",
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "node_modules/@types",
      "node_modules/@types/node/fs/promises.d.ts",
      "node_modules/@types/allure-js-commons/index.d.ts",
      "node_modules/@types/chai/index.d.ts",
      "node_modules/@types/chromedriver/index.d.ts",
      "node_modules/@types/cucumber/index.d.ts",
      "node_modules/@types/nightwatch/index.d.ts",
      "node_modules/@types/node/index.d.ts",
      "node_modules/@types/rimraf/index.d.ts",
      "types",
      "node_modules/web3/types/index.d.ts",
      "node_modules/web3-bzz/types/index.d.ts",
      "node_modules/web3-core/types/index.d.ts",
      "node_modules/web3-core-helpers/types/index.d.ts",
      "node_modules/web3-core-method/types/index.d.ts",
      "node_modules/web3-core-promievent/types/index.d.ts",
      "node_modules/web3-core-requestmanager/types/index.d.ts",
      "node_modules/web3-core-subscriptions/types/index.d.ts",
      "node_modules/web3-eth/types/index.d.ts",
      "node_modules/web3-eth-abi/types/index.d.ts",
      "node_modules/web3-eth-accounts/types/index.d.ts",
      "node_modules/web3-eth-contract/types/index.d.ts",
      "node_modules/web3-eth-ens/types/index.d.ts",
      "node_modules/web3-eth-iban/types/index.d.ts",
      "node_modules/web3-eth-personal/types/index.d.ts",
      "node_modules/web3-net/types/index.d.ts",
      "node_modules/web3-providers-http/types/index.d.ts",
      "node_modules/web3-providers-ipc/types/index.d.ts",
      "node_modules/web3-providers-ws/types/index.d.ts",
      "node_modules/web3-shh/types/index.d.ts",
      "node_modules/web3-utils/types/index.d.ts",
      "node_modules/solc-typed-ast/dist/index.d.ts",

      "node_modules/nightwatch-allure/lib/index.d.ts",
      "node_modules/nightwatch-allure/lib/allure/writers",
      "node_modules/dotenv/types/index.d.ts"
    ],
    "esModuleInterop": true,
    "outDir": "build",
    "rootDirs": ["src", "tests", "types"],
    "inlineSourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*"],
      "constants/*": ["src/constants/*"],
      "src/*": ["src/*"],
      "tests/*": ["tests/*", "src/tests/*"],
      "actions/*": ["src/actions/*"],
      "models/*": ["src/models/*"],
      "questions/*": ["src/questions/*"],
      "tasks/*": ["src/tasks/*"],
      "types/*": ["types/*", "src/types/*"]
    }
  },
  "include": ["**/*.ts", "**/*.js"],
  "exclude": ["node_modules", "build", "node_modules/**/tests"],
  // "rootDir": "./src",
  "noImplicitAny": true,
  "noImplicitThis": true,
  "noUnusedLocals": true,
  "noUnusedParameters": true,
  "moduleResolution": "node",
  "allowSyntheticDefaultImports": true,
  "skipLibCheck": true,
  "forceConsistentCasingInFileNames": true,
  "resolveJsonModule": true,
  "strictNullChecks": true
}
